# /config/database.yml

# various artifacts
**.war
*.rbc
*.sassc
.redcar/
.sass-cache
/api/config/config.yml
/api/coverage.data
/api/coverage/
/api/db/*.javadb/
/api/db/*.sqlite3
/api/doc/api/
/api/doc/app/
/api/doc/features.html
/api/doc/specs.html
/api/public/cache
/api/public/stylesheets/compiled
/api/public/system/*
